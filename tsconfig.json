{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,
    "target": "es5",
    "module": "none",
    "moduleResolution": "node",
    "removeComments": false,
    "outDir": "../static/js",
    "preserveConstEnums": true,
    "rootDir": "src",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
